<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_margin="15dp"
    android:layout_marginTop="15dp"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        card_view:cardCornerRadius="8dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        card_view:cardElevation="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
    <RelativeLayout
        android:layout_margin="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
        <android.support.v7.widget.CardView
            android:id="@+id/rl3"
            card_view:cardCornerRadius="5dp"
            card_view:cardBackgroundColor="@color/colorRed"
            android:layout_width="12dp"
            android:layout_height="180dp"></android.support.v7.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kubra"
            android:textColor="@color/colorText"
            android:textStyle="bold|italic"
            android:id="@+id/product_name"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kubra"
            android:textColor="@color/colorText"
            android:id="@+id/price"
            android:textStyle="italic"
            android:layout_below="@id/product_name"
            android:textSize="17sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kubra"
            android:textColor="@color/colorText"
            android:layout_below="@id/price"
            android:id="@+id/quentity"
            android:textSize="17sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kubra"
            android:layout_below="@id/quentity"
            android:id="@+id/quentity1"
            android:textColor="@color/colorText"
            android:textSize="17sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            />

<ImageView
    android:layout_marginTop="15dp"
    android:layout_marginRight="20dp"
    android:layout_width="100dp"
    android:layout_height="90dp"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:background="@drawable/ic_conveyor"/>

    </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>